# Convex Backend Environment Variables
# Set these in your Convex dashboard: https://dashboard.convex.dev
CLERK_ISSUER_URL=https://your-clerk-instance.clerk.accounts.dev

# Frontend Environment Variables (Vite requires VITE_ prefix)
# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# Convex
VITE_CONVEX_URL=https://your-deployment.convex.cloud

# Stripe Payments
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# UploadThing File Uploads
VITE_UPLOADTHING_URL=https://uploadthing.com
VITE_UPLOADTHING_KEY=your_uploadthing_key

# Optional: Stripe Secret Key (if used in Convex backend functions)
# Set this in your Convex dashboard environment variables
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Optional: UploadThing Secret (if used in Convex backend functions)
# Set this in your Convex dashboard environment variables
# UPLOADTHING_SECRET=your_uploadthing_secret
